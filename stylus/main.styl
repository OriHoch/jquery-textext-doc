@import '_common'

body
	background   : white
	font         : $body_font
	padding-left : 16em

code
	round_corners 2px
	border     : 1px solid $code_bg - 10%
	background : $code_bg
	padding    : 0px 2px
	font       : $code_font

pre
	round_corners 2px
	border     : 1px solid $code_bg - 10%
	background : $code_bg
	padding    : 4px 7px

	code
		background : none
		border     : none
		padding    : none

textarea
	&.example
		width: 300px

	&#output
		width: 400px

nav
	border_box()
	position   : fixed
	left       : 0
	top        : 0
	bottom     : 0
	width      : 15em
	background : silver
	padding    : 1em

	ul
		list-style-type: none
		padding : 0
		margin: 0

		li
			padding: 0

#api
	h3
		border-bottom: 1px solid silver

	h4
		border-bottom: 1px solid silver
		margin: 3em 0 0 0

		.default
			font-weight: normal
			color: silver
	
	ul.params
		margin: .5em 0 0 0
		padding-left: 1.5em
		list-style-type: square

		li
			margin: 0
			p
				margin: 0
